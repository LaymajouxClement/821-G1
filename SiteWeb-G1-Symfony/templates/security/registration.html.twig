{% extends 'base.html.twig' %}

{% block body %}

	<H1>Inscription !</H1>

    {{ form_start(form) }}

    {{ form_row(form.username, { 'attr': {'placeholder':'Identifiant'} }) }}
    {{ form_row(form.email, { 'attr': {'placeholder':'Adresse mail'} }) }}
    {{ form_row(form.password, { 'attr': {'placeholder':'Mot de passe'} }) }}
    {{ form_row(form.confirm_password, { 'attr': {'placeholder':'Confirmer Mot de passe'} }) }}

    <button type="submit" class="btn btn-success">S'inscrire</button>

    {{ form_end(form) }}

{% endblock %}

