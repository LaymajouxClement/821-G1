{% extends 'base.html.twig' %}
{% block encoding %}<meta charset="UTF-8">{% endblock %}
{% block title %}Inscription - {% endblock %}
{% block body %}

	<h1>Inscription !</h1>
	<br/>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
        		'label': 'Nom d\'utilisateur :', 
        		'attr': {'placeholder': 'Nom d\'utilisateur...'}
        	})
        }}
        {{ form_row(registrationForm.email, {
        		'label': 'Adresse mail :', 
        		'attr': {'placeholder': 'Adresse mail...'}
            })
        }}
        {{ form_row(registrationForm.password.first, {
        		'label': 'Mot de passe :', 
        		'attr': {'placeholder': 'Mot de passe...'}
        	})
        }}
	    {{ form_row(registrationForm.password.second, {
        		'label': 'Confirmation du mot de passe :', 
        		'attr': {'placeholder': 'Confirmer mot de passe...'}
        	})
        }}
        
        {{ form_row(registrationForm.agreeTerms, {
        		'label': 'Valider les conditions d\'utilisations de notre site :', 
        	})
        }}
    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
   

{% endblock %}

